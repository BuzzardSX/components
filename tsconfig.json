{
	"compilerOptions": {
		"target": "ESNext",
		"module": "Node16",
		"moduleResolution": "Node16",
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"types": ["node"],
		"paths": {
			"~/*": ["./src/*"]
		},
		"allowJs": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src"]
}
